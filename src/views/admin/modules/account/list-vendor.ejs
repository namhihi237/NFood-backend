<%- include('../../layout/header.ejs', {titlePage}); -%>
<div class="row align-items-center">
  <div class="border-0 mb-4">
    <div class="card-header py-3 no-bg bg-transparent d-flex align-items-center px-0 justify-content-between border-bottom flex-wrap">
      <h3 class="fw-bold mb-0">Quản lý tài khoản người bán hàng</h3>
    </div>
  </div>
</div>
<!-- Row end  -->
<div class="row clearfix g-3">
  <div class="col-sm-12">
    <div class="card mb-3">
      <div class="card-body">
        <table id="myProjectTable" class="table table-hover align-middle mb-0" style="width: 100%">
          <thead>
            <tr>
              <th>STT</th>
              <th>Họ tên</th>
              <th>Số điện thoại</th>
              <th>Ngày đăng ký</th>
              <th>Địa chỉ</th>
              <th>Email</th>
              <th>Nhận đơn</th>
              <th>Trạng thái</th>
              <th>Hành động</th>
            </tr>
          </thead>
          <tbody>
            <% vendors.forEach((item, index) =>{%>
            <tr>
              <td><strong><%=index + 1 %> </strong></td>
              <td>
                <a href="#">
                  <span class="fw-bold ms-1"><%=item.name %> </span>
                </a>
              </td>
              <td><%=item.phoneNumber %></td>
              <td><%=`${item.createdAt.getDate()}/${item.createdAt.getMonth() + 1}/${item.createdAt.getFullYear()}` %></td>
              <td><%=item.address %></td>
              <td><%=item.email %></td>
              <td><%=item.isReceiveOrder ? 'Có' : 'Không' %></td>
              <td>
                <a type="button" class="btn btn-<%=item.isActive ? 'info' : 'secondary' %>" href="/vendor/<%=item._id  %>/toggle">
                  <%=item.isActive ? 'Hoạt đông' : 'Không hoạt động' %>
                </a>
              </td>
              <td>
                <div class="btn-group" role="group" aria-label="Basic outlined example">
                  <a type="button" class="btn btn-outline-secondary deleterow" href="/vendor/<%=item._id  %>/delete">
                    <i class="icofont-ui-delete text-danger"></i>
                  </a>
                </div>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
        <div class="mt-3 d-flex justify-content-between">
          <div>
            <p class="mb-0">Hiển thị từ 1 đến 10 trong tổng số <strong><%=totalRow %></strong> kết quả</p>
          </div>
          <nav aria-label="Page navigation example">
            <ul class="pagination">
              <li class="page-item"><a class="page-link" href="/vendor?page=<%=prePage  %>">Trang trước</a></li>
              <li class="page-item"><a class="page-link" href="#"><%=page %> </a></li>
              <li class="page-item"><a class="page-link" href="/vendor?page=<%=nextPage  %>">Tiếp theo</a></li>
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../../layout/footer.ejs'); -%>
